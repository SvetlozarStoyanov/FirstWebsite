@model Dictionary<string,CrysisWalkthroughs.Models.AttachmentModel>

<!DOCTYPE html>
<html lang="en">
<head>
	<style type="text/css">
		body, html {
			height: 100%;
			width: 100%;
			margin: 0;
			background-image: url("/img/Weapons/Weapons.jpg");
			background-repeat: no-repeat;
			background-size: cover;
			background-attachment: fixed;
			margin-bottom: 60px;
			color: #777;
			position: relative;
			min-height: 100%;
			font-size: 14px;
			overflow: hidden;
		}

		.header-style {
			color: red;
		}

		.game-button {
			width: 200px;
			height: 100px;
			font-size: 40px;
			background: none;
			border: none;
			outline: none;
		}

		.list-styling {
			color: firebrick;
			font-size: 20px;
		}

		.weapon-button-size {
			width: 160px;
		}

	.game-button-image {
			width: 20%;
			color: greenyellow;
			text-decoration: none;
			border: 2px solid green;
			outline: none;
			background: rgb(0,0,0,0.4);
		}

			.game-button-image:hover {
				color: gold;
				text-decoration: none;
				border: 2px solid gold;
			}

			.game-button-image:active {
				color: cadetblue;
				text-decoration: none;
				border: 2px solid cadetblue;
			}

		.line-break {
			flex-basis: 100%;
			height: 0;
		}

		.weapon-zone {
			display: flex;
			flex-wrap: wrap;
			position: relative;
			border: none;
			text-align: center;
			top: 100px;
			background: none;
		}

		.weapon-label {
			font-size: 20px;
			text-align: left;
		}

		.title-styling {
			margin: auto;
			position: center;
			text-align: center;
			top: 100px;
			right: 480px;
			width: 50%;
			height: auto;
			font-size: 40px;
			color: whitesmoke;
			padding: 10px;
			background: rgb(0,0,0,0.4);
		}

		.back-button {
			padding: 0;
			background: rgb(0,0,0,0.4);
			outline: none;
			position: absolute;
			left: 16px;
			top: 70px;
			height: auto;
			font-size: 60px;
			color: whitesmoke;
		}

			.back-button:hover {
				text-decoration: none;
				color: gold;
			}

		.filtered-list-weapons {
			position: relative;
			text-align: center;
			font-size: 40px;
		}
	</style>

</head>
<body>
	@{
		string[] imageNames = { "Silencer.png", "Flashlight.png", "Laser Pointer.png", "Incendiary Ammo.png", "EMP Grenade.png", "Under Barrel Grenade Launcher.png", "Tactical Attachment.png", "Reflex Sight.png", "Assault Scope.png", "Sniper Scope.png" };
	}
 <span>
  <a class="back-button" href="javascript:javascript:history.go(-1)">&larr;Back</a>
 </span>
 <h1 class="title-styling">Select an attachment</h1>
 <form asp-action="FilterWeaponsByAttachment">
  <div class="weapon-zone">
			@{
				@if (Model != null)
				{
					int i = 0;
					@foreach (var attachment in Model)
					{
						string name = attachment.Key;
						@if (i % 5 == 0)
						{
				<div class="line-break"></div>
						}


			<button class="game-button-image" type="submit" value="@name" name="attachmentName" style="outline: none;">
		  <div class="weapon-label">@name</div>
		  <img class="game-button" src="~/img/Attachments/@imageNames[i++]" />
			</button>
					}
				}
			}
  </div>
 </form>
</body>
</html>


