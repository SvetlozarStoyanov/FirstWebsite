@model Dictionary<string,CrysisWalkthroughs.Models.WeaponModel>

<!DOCTYPE html>
<html lang="en">
<head>
	<style type="text/css">
		body, html {
			height: 100%;
			width: 100%;
			margin: 0;
			background-image: url("/img/Weapons/Weapons.jpg");
			background-repeat: no-repeat;
			background-size: cover;
			background-attachment: fixed;
			margin-bottom: 60px;
			color: #777;
			position: relative;
			min-height: 100%;
			font-size: 14px;
			overflow: hidden;
		}

		.header-style {
			color: red;
		}



		.list-styling {
			color: firebrick;
			font-size: 20px;
		}

		.weapon-button-size {
			width: 160px;
		}

		.game-button {
			width: 200px;
			height: 100px;
		}

		.game-button-image {
			width: 20%;
			color: greenyellow;
			text-decoration: none;
			border: 2px solid green;
			outline: none;
			background: rgb(0,0,0,0.4);
		}

			.game-button-image:hover {
				color: gold;
				text-decoration: none;
				border: 2px solid gold;
			}

			.game-button-image:active {
				color: cadetblue;
				text-decoration: none;
				border: 2px solid cadetblue;
			}

		.line-break {
			flex-basis: 100%;
			height: 0;
		}

		.weapon-zone {
			display: flex;
			flex-wrap: wrap;
			position: relative;
			border: none;
			text-align: center;
			top: 100px;
			background: none;
		}

		.weapon-label {
			font-size: 20px;
			text-align: left;
		}

		.title-styling {
			margin: auto;
			position: center;
			text-align: center;
			top: 100px;
			right: 480px;
			width: 50%;
			height: auto;
			font-size: 40px;
			color: whitesmoke;
			padding: 10px;
			background: rgb(0,0,0,0.4);
		}

		.back-button {
			padding: 0;
			background: rgb(0,0,0,0.4);
			outline: none;
			position: absolute;
			left: 16px;
			top: 70px;
			height: auto;
			font-size: 60px;
			color: whitesmoke;
		}

			.back-button:hover {
				text-decoration: none;
				color: gold;
			}
	</style>

</head>
<body>
	@{
		string[] imageNames = { "Pistol.png", "AY69.png", "SCAR.png", "FY71.png", "Shotgun.png", "SMG.png", "Precision Rifle.png", "Gauss Rifle.png", "Minigun.png", "Alien Gun.png", "Rocket Launcher.png", "Grenade Launcher.png", "C4.png", "Claymore.png", "Mine.png", "Grenade.png", "EMP.png", "Flashbang.png", "Smoke.png", "Fists.png" };
		Dictionary<string, int> weaponImageIndex = new Dictionary<string, int>();
		for (int index = 0; index < imageNames.Length; index++)
			weaponImageIndex.Add(imageNames[index], index);
	}
 <span>
  <a class="back-button" href="javascript:javascript:history.go(-1)">&larr;Back</a>
 </span>
 <h1 class="title-styling">Click on a weapon to see information</h1>
 <form>
  <div class="weapon-zone">
			@{
				int i = 0;
				string name = string.Empty;
			}
			@foreach (var weapon in Model)
			{
				name = weapon.Key;
				int weaponIndex = weaponImageIndex[name + ".png"];
				@if (i % 5 == 0)
				{
		   <div class="line-break"></div>
				}
	   <a class="game-button-image" href="@Url.Action("ShowWeaponStats","Weapons",new {name})" type="submit">
		<img class="game-button" src="~/img/Weapons/@imageNames[weaponIndex]" />
		<div class="weapon-label">
						@weapon.Key
		</div>
	   </a>
				i++;
			}
  </div>
 </form>
</body>
</html>


